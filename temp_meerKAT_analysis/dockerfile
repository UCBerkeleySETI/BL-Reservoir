# getting base image ubuntu
FROM ubuntu

RUN apt-get update && apt-get install git -y && apt-get install vim -y && apt-get install wget 
RUN git clone --single-branch --branch peter-dev https://github.com/UCBerkeleySETI/BL-Reservoir.git && apt install python3-pip -y && cd BL-Reservoir  && cd temp_meerKAT_analysis 
RUN pip3 install -r requirements.txt 
